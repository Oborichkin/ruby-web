= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.text_field :name, class: "form-control", placeholder: t('.name')
  .form-group
    = f.text_field :email, class: "form-control", placeholder: t('.email')
  .form-group
    = f.password_field :password, class: "form-control", placeholder: t('.password')
  .form-group
    = f.password_field :password_confirmation, class: "form-control", placeholder: t('.password_confirmation')
  .form-group
    = f.submit t('.create_account'), class: "btn btn-large btn-primary"
