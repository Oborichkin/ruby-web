%header.masthead.mb-auto
    %div.inner
        %h3.masthead-brand Experteeze
        %nav.nav.nav-masthead.justify-content-center
            - if signed_in?
                = gravatar_for current_user
            - else
                = link_to t('.sign_in'), signin_path, class: "nav-link"
            =link_to t('.home'), main_index_path, class: "nav-link"
            =link_to t('.contacts'), main_contacts_path, class: "nav-link"
            =link_to t('.help'), main_help_path, class: "nav-link"
            =link_to t('.about'), main_about_path, class: "nav-link"