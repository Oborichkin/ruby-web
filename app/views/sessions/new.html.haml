%h1= t('.sign_in')

= form_for(:session, url: sessions_path) do |f|

  .form-group
    = f.text_field :email, class: "form-control", placeholder: t('.email')
  .form-group
    = f.password_field :password, class: "form-control", placeholder: t(".password")
  .form-group
    = f.submit t('.sign_in'), class: "btn btn-large btn-primary"
  .form-group
    %p.sign_up_link
      = t('.new_user?')
      = link_to t('.sign_up'), signup_path